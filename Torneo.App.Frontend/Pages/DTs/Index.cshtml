@page
@model Torneo.App.Frontend.Pages.DTs.IndexModel
@{
}
<h1>Listado de Directores Tecnicos</h1>
<br><br>
<a class="btn btn-primary" asp-page="./Create">Crear DT</a>
<br><br>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col" colspan="4">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dt in Model.dts)
        {
            <tr>
                <th scope="row">@dt.Id</th>
                <td>@dt.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@dt.Id">
                        Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@dt.Id">
                        Editar
                    </a>
                </td>
                <td>
                    <form method="post" class="d-inline">
                        <button asp-page-handler="Delete" asp-route-id="@dt.Id"
                        onclick="return confirm('Esta Seguro de eliminar el DT?')" class="btn btn-danger">
                            Eliminar
                        </button>
                    </form>
                </td>
                <td>
                    @if (Model.ErrorEliminar)
                    {
                        <div class="alert alert-danger" role="alert">
                            Conflicto al eliminar el DT
                        </div>
                    }
                </td>
            </tr>
            
        }
    </tbody>
</table>