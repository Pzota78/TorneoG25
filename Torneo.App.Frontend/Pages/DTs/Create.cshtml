@model Torneo.App.Frontend.Pages.Dts.CreateModel
@{
}
<h1>Nuevo Director Tecnico</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="dt.Nombre"></label>
        <input asp-for="dt.Nombre" class="form-control">
        
    </div>
    <div class="form-group">
        <label asp-for="dt.Documento"></label>
        <input asp-for="dt.Documento" class="form-control">
        <span class="text-danger" asp-validation-for="dt.Documento"></span>
    </div>
    <div class="form-group">
        <label asp-for="dt.Telefono"></label>
        <input asp-for="dt.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="dt.Telefono"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">Crear DT</button>
</form>
