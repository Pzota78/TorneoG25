@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}
<h1>Listado de equipos</h1>
<br><br>
<a class="btn btn-primary" asp-page="./Create">Crear Equipo</a>
<br><br>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">D.T</th>
            <th scope="col" colspan="4">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model.equipos)
        {
            <tr>
                <th scope="row">@equipo.Id</th>
                <td>@equipo.Nombre</td>
                <td>@equipo.DirectorTecnico.Nombre</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@equipo.Id">
                        Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary" asp-page="./Edit" asp-route-id="@equipo.Id">
                        Editar
                    </a>
                </td>
                <td>
                <form method="post" class="d-inline">
                        <button asp-page-handler="Delete" asp-route-id="@equipo.Id" onclick="return confirm('Esta Seguro de eliminar el municipio?')" class="btn btn-danger">
                            Eliminar
                        </button>
                </form>
                </td>
                <td>
                    @if (Model.ErrorEliminar)
                    {
                        <div class="alert alert-danger" role="alert">
                            Conflicto al eliminar el Equipo
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>